!-- Xft settings -- !
Xft.antialias:	1
Xft.hinting:	1
Xft.autohint:	0
Xft.hintstyle:	hintslight
Xft.rgba:	rgb
Xft.lcdfilter:	lcddefault
Xft.dpi:   135

st.font:         Fira Code Nerd Font:style:medium:pixelsize=20
st.alpha: 0.9

! window border inner
st.opacity: 200
st.borderpx: 10

! #define background_opacity 0.9
!#define base00 #1e222a
!#define base01 #353b45
!#define base02 #3e4451
!#define base03 #545862
!#define base04 #565c64
!#define base05 #abb2bf
!#define base06 #b6bdca
!#define base07 #c8ccd4
!#define base08 #e06c75
!#define base09 #d19a66
!#define base0A #e5c07b
!#define base0B #98c379
!#define base0C #56b6c2
!#define base0D #61afef
!#define base0E #c678dd
!#define base0F #be5046

#define base00 #0f111a
#define base01 #323a4c
#define base02 #3e4451
#define base03 #545862
#define base04 #565c64
#define base05 #abb2bf
#define base06 #b6bdca
#define base07 #cbccc6
#define base08 #f28779
#define base09 #ffa759
#define base0A #ffd580
#define base0B #bae67e
#define base0C #73d0ff
#define base0D #5ccfe6
#define base0E #d4bfff
#define base0F #ff3333

*foreground:   base07
#ifdef background_opacity
*background:   [background_opacity]base00
#else
*background:   base00
#endif
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base08
*color10:      base0B
*color11:      base0A
*color12:      base0D
*color13:      base0E
*color14:      base0C
*color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
  ! use 'shell' template to set these if necessary
  *color16:      base09
  *color17:      base0F
  *color18:      base01
  *color19:      base02
  *color20:      base04
  *color21:      base06

  tabbed.selbgcolor:   #282c34
  tabbed.selfgcolor:   #d6d8eb

  tabbed.normfgcolor:  #9294a8
  tabbed.normbgcolor:  #353b45
